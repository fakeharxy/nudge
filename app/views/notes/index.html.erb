<% flash.each do %>
  <p id="notice" role="alert" class="alert alert-success"><%= notice %><button type="button" class="close" data-dismiss="alert" aria-label="Close">
  </button></p>
<% end %>

<div>
  <% if @note %>
    <div class="progress">
      <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: <%= @progress-10 %>%" aria-valuenow="<%= @progress-10 %>" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <%= render partial: "shownote", locals: { note: @note } %>
    <br>

  <% else %>
    <p> You've seen all your notes today. </p>
    <p> <img class='sun' src="images/sun.png" height='200'> </p>
    <p> I'd recommend going outside or drawing a picture, but if you really want to see more, you can  <%= link_to 'Reset', reset_path() %> your note stack and see them all again! </p>
  <% end %>
</div>
<br>


<script>
  $(document).ready(function(){
    $(".progress-bar").css('width', '<%= raw @progress %>%');
  })
</script>
