<main role="main" class="col-sm-10 col-md-12 ml-sm-auto col-lg-9 pt-3 px-4">
<% flash.each do %>
  <p id="notice" role="alert" class="alert alert-success"><%= notice %></p>
<% end %>

<div>
  <% if @note %>
    <div class="card" style="width: 100%;">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">#<%= @note.get_tag_name %></h6>
        <%= simple_format(@note.body, class: "card-text") %>
        <a href="tags/<%= @note.second.id %>" class="card-link">#<%= @note.second.name %></a>
        <div class="btn-group dropleft next-selector float-right" role="group">
          <%= link_to (octicon 'plus', :height => 15), noteseen_path(@note,"plus"), :class => 'btn btn-sm btn-success btn-plus' %>
          <%= link_to (octicon 'eye', :height => 20), noteseen_path(@note), :class => 'btn btn-sm btn-primary btn-next-selector' %>
          <%= link_to (octicon 'dash', :height => 18), noteseen_path(@note, "minus"), :class => 'btn btn-sm btn-danger btn-minus' %>
          <button class="btn btn-sm btn-next-selector btn-light active dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= octicon "kebab-vertical" %>
          </button>
          <div class="dropdown">
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to "delete note", @note, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'dropdown-item' %>
              <%= link_to "edit note", edit_note_path(@note), :class => 'dropdown-item' %>
            </div>
          </div>
        </div>
      </div>
      <% if @note.urgency_level == "high" %>
        <div title=<%=@note.urgency%> class="urgency urgency-high float-left"></span>
      <% elsif @note.urgency_level == "medium" %>
        <span title=<%=@note.urgency%> class="urgency urgency-medium float-left"></span>
      <% else %>
        <span title=<%=@note.urgency%> class="urgency urgency-low float-left"></span>
      <% end %>
      <div class="urgency float-left"> </div>
        </div>
      <% else %>
        You've seen all your notes today.
        <%= link_to 'Reset', reset_path() %>
      <% end %>
    </div>
    <br>

    <%= link_to "New note...", new_note_path %>


</main>
