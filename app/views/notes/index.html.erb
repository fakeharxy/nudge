<p id="notice"><%= notice %></p>


<div class="sidebar">
  <h5> Tagbar </h5>
  <ul>
    <% @tags.each do |t| %>
      <li><%= link_to t.name, tag_path(t) %> </li>
    <% end %>
  </ul>
</div>


<div class="content">


  <div>
        <% if @note %>
          <p><%= @note.body %></p>
          <p><%= link_to 'Edit', edit_note_path(@note) %></p>
          <p><%= link_to 'Destroy', @note, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>
  </div>
  <br>

<%= link_to 'New Note', new_note_path %>
</div>
