<main role="main" class="col-sm-10 col-md-12 ml-sm-auto col-lg-9 pt-3 px-4">
<% flash.each do %>
  <p id="notice" role="alert" class="alert alert-dismissible alert-success"><%= notice %><button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button></p>
<% end %>

<div>
  <% if @note %>
    <div class="progress">
      <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: <%= @progress %>%" aria-valuenow="<%= @progress %>" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="card" style="width: 100%;">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">#<%= @note.get_tag_name %></h6>
        <%= simple_format(@note.body, class: "card-text") %>
        <a href="tags/<%= @note.second.id %>" class="card-link">#<%= @note.second.name %></a>
        <div class="btn-group dropleft next-selector float-right" role="group">
          <%= link_to (octicon 'eye', :height => 20), noteseen_path(@note, "minus"), :class => 'btn btn-sm btn-primary btn-next-selector' %>
          <button class="btn btn-sm btn-next-selector btn-light active dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= octicon "kebab-vertical" %>
          </button>
          <div class="dropdown">
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to "delete note", @note, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'dropdown-item' %>
              <%= link_to "edit note", edit_note_path(@note), :class => 'dropdown-item' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br>

    <p>  <%= link_to "Create a new note...", new_note_path %> </p>

  <% else %>
    <p>  <%= link_to "Create a new note...", new_note_path %> </p>
    <p> You've seen all your notes today. </p>
    <p> <img class='sun' src="images/sun.png" height='200'> </p>
    <p> I'd recommend going outside or drawing a picture, but if you really want to see more, you can  <%= link_to 'Reset', reset_path() %> your note stack and see them all again! </p>
  <% end %>
</div>
<br>

</main>
