<main role="main" class="col-sm-10 col-md-12 ml-sm-auto col-lg-9 pt-3 px-4">
<% flash.each do %>
  <p id="notice" role="alert" class="alert alert-success"><%= notice %></p>
<% end %>

<% if session[:count] == 0 %>
  <p> That's your lot for now! Enjoy your day! </p>
  <p> Unless you really want some more? </p>
<% else %>
  <p> How many notes would you like to view? </p>
<% end %>

<input id="ex13" type="text" data-slider-ticks="[0, 5, 10, 15, 20, 25]" data-slider-ticks-snap-bounds="100" data-slider-value="0" data-slider-ticks-labels='["0", "5", "10", "15", "20", "all"]'/>


    <br>
    <br>
    <br>
<%= link_to "New note...", new_note_path %>

</main>

<script>
  $(document).ready(function(){
    var slider = new Slider("#ex13", {
      ticks: [0, 5, 10, 15, 20, 25],
      ticks_labels: ['', '5', '10', '15', '20', 'all'],
      ticks_snap_bounds: 5
    });

    slider.on("slideStop", function(sliderValue) {
      if (sliderValue >=5 ) {
        window.location.replace("/selectValue/" + sliderValue);
      }
    });
  });

</script>
