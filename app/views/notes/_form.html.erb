

<%= form_for(note) do |f| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :note, class: "control-label"%>
    <%= f.text_area :body, class: "body-note form-control", required:true %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <select name="note[tag]" class="dropdown1 form-control" required="true">
        <option></option>
        <% @alltags.each do |tag| %>
          <option><%= tag %></option>
        <% end %>
      </select>
    </div>

    <div class="form-group col-md-6">
      <select name="note[second]" class="dropdown2 form-control" required="true">
        <option></option>
        <% @allseconds.each do |tag| %>
          <option><%= tag %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="actions btn-group">
    <%= f.submit "noteback", class: "btn btn-primary" %>
  </div>
<% end %>
