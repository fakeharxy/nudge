

<%= form_for(note) do |f| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :note, class: "control-label"%>
    <%= f.text_area :body, class: "body-note form-control" %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.label :primary_tag, class: "control-label" %>
    <%= f.text_field :primary_tag, class: "form-control" %>
    </div>

    <div class="form-group col-md-8">
      <%= f.label :secondary_tags, class: "control-label" %>
      <%= f.text_field :secondary_tags, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
