<main role="main" class="col-md-9 ml-sm-auto col-lg-9 pt-3 px-4">
<% flash.each do %>
  <div id="notice" role="alert" class="alert alert-dismissible alert-success"><%= notice %><button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button></div>
  <% end %>

  <% @notes.each do |note| %>
    <%= render partial: "shownote", locals: { note: note } %>
    <br />
  <% end %>
  <%= link_to "back", tags_path(), :class => "red-text tag-item nav-item nav-link" %>
</main>
