<main role="main" class="col-md-9 ml-sm-auto col-lg-9 pt-3 px-4">
<% flash.each do %>
  <div id="notice" role="alert" class="alert alert-dismissible alert-success"><%= notice %><button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button></div>
  <% end %>

  <% @notes.each do |note| %>
    <div class="card" style="width: 100%;">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">#<%= note.tag %></h6>
        <%= simple_format(note.body, class: "card-text") %>
        <a href="../seconds/<%= note.second %>" class="card-link">#<%= note.second %></a>
        <div class="btn-group dropleft next-selector-show float-right" role="group">
          <button class="btn btn-sm btn-next-show btn-light active dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= octicon "kebab-vertical" %>
          </button>
          <div class="dropdown">
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to "delete forever", note, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'dropdown-item' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br>
  <% end %>
  <%= link_to "back", notes_path(), :class => "red-text tag-item nav-item nav-link" %>
</main>
